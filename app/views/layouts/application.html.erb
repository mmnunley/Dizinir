  <script type="text/javascript">

  function pageloading (){
  		$screenwidth = $(window).width();

		$screencenter = $screenwidth / 2;
  		var homeNumber = 2450 - $screencenter;
  		var $paneTarget = $('body');
		$paneTarget.scrollTo( {top:'1800px', left: homeNumber}, 1000);
		$paneTarget.scrollTo( {top:'1800px', left: homeNumber}, 2000);
  }

$(document).ready(function()
    {            
     	$(window).onAfter = pageloading();
    	//Grabs the width of the current window
		$screenwidth = $(window).width();

		//finds the central point of the current window
		$screencenter = $screenwidth / 2;
		//Center of the pixel location is the numbers below. So for About it is 500px from the left side and 500px to the middle of the width of the page. Take that minus the width of the monitor and you will have the page in the middle of the screen.
		var aboutNumber = 1000 - $screencenter;
		var portNumber = 4000 - $screencenter;
		var servicesNumber = 4000 - $screencenter;
		var contactNumber = 1000 - $screencenter;
		var homeNumber = 2450 - $screencenter;

		var $paneTarget = $('body');
		$('#About').click(function(){
				$paneTarget.scrollTo( {top:'450px', left: aboutNumber} , 1000);
			});
		$('#Port').click(function(){
				$paneTarget.scrollTo( {top:'3400px', left: portNumber}, 1000);
			});
		$('#Services').click(function(){
				$paneTarget.scrollTo( {top:'450px', left: servicesNumber}, 1000);
			});
		$('#Contact').click(function(){
				$paneTarget.scrollTo( {top:'3400px', left: contactNumber}, 1000, 
					{onAfter: function(){ papermove(); } }
			);
			});
		$('#Home').click(function(){
				$paneTarget.scrollTo( {top:'1800px', left: homeNumber}, 1000);
			});

		function papermove() {
			//$('#paper').animate({top: '+=30'}, 300).animate({top: '-=30'}, 300);
			//$('#contact-form').animate({top: '+=30'}, 300).animate({top: '-=30'}, 300);	
			};
    });

